{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read https://deno.land/std@0.157.0/http/file_server.ts dist/",
    "hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.2/mod.ts"
  },
  "compilerOptions": {
    "lib": ["es2015", "dom", "deno-libs-only", "esnext", "DOM", "DOM.Iterable"],
    "strict": true
  },
  "files": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.svelte"],
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^5.0.1",
    "eslint-plugin-svelte": "npm:eslint-plugin-svelte@^2.46.1",
    "svelte": "npm:svelte@^5.4.0",
    "svelte-preprocess": "npm:svelte-preprocess@^6.0.3",
    "yaml": "npm:yaml@^2.6.1"
  },
  "nodeModulesDir": "auto"
}
